%header
  .header-content
    .header-main
      =image_tag "/assets/logo.png",class: "header-main__image"
      .heaer-main__search
        =form_with url: search_tops_path, local: true, method: :get, class: "header-main__search--field" do |f|
          =f.text_field :content,placeholder:"キーワードから探す",class: "header-main__search--box"
          =link_to "#" ,class: "header-main__search--btn" do
            =icon('far','fa-search')
            <i class="fas fa-search"></i>

    .header-nav
      %ul
        %li{class: "header-nav-left"}
          カテゴリー
        %li{class: "header-nav-left"}
          ブランド     
      %ul
        %li{class: "header-nav-right"}
          =link_to "ログイン","#",class: "header-nav-right__btn"
        %li{class: "header-nav-right"}
          =link_to "新規会員登録","#",class: "header-nav-right__btn"

